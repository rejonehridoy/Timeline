<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:padding="6dp"
        app:cardElevation="4dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_item_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:text="Full Name"
                android:textSize="17sp"
                android:textColor="@color/Black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_item_userName"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:paddingLeft="4dp"
                    android:layout_height="wrap_content"
                    android:text="Username"/>


                <TextView
                    android:id="@+id/user_item_email"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Email"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_item_gender"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Gender"/>

                <TextView
                    android:id="@+id/user_item_phone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_item_status"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Status"/>

                <TextView
                    android:id="@+id/user_item_userType"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="UserType"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_item_lastVisit"
                    android:layout_width="match_parent"
                    android:paddingLeft="4dp"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Last Visit:"/>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>