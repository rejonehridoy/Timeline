<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        android:padding="4dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_item_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="This is a subject"
                android:textSize="18sp"
                android:textColor="@color/Black"/>

            <TextView
                android:id="@+id/notice_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a description"
                android:singleLine="true"
                android:textSize="18sp"
                android:textColor="@color/Black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notice_item_date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:text="07-07-2020 12:55 AM"/>

                <TextView
                    android:id="@+id/notice_item_third"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Review : 8.7"/>
            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>