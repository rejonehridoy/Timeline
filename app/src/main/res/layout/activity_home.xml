<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <include
        android:id="@+id/home_toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <!--First Row -->
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_activity_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_shape_deep_purple"
                        android:src="@drawable/home_activity"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Activity"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/deep_purple"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Create your activity"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_password_manager_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_material_yellow"
                        android:src="@drawable/home_password2"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Password Manager"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/material_yello"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Secure your password"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Second Row -->
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_profile_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_light_green"
                        android:src="@drawable/home_profile2"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Profile"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/dark_green"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Check your info"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_history_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_orange"
                        android:src="@drawable/home_history"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="History"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/orange"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="watch your activity"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Third Row -->
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_notice_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_material_green"
                        android:src="@drawable/home_notes2"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Notice"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/material_green"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Check your updated notice"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_notes_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_pink_accent"
                        android:src="@drawable/home_notes"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Notes"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/pink_accent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Create you own note"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Fourth Row -->
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_event_timer_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_blue"
                        android:src="@drawable/home_project"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Projects/Thesis"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Manage your projects"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_settings_cardView"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_height="200dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/circle_orange"
                        android:src="@drawable/home_settings"
                        android:padding="10dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Settings"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/orange"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Set your app functionality"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>


</RelativeLayout>