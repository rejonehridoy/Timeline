<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:padding="6dp"
        app:cardElevation="4dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_item_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:text="@string/history_item_title_demo"
                android:textSize="17sp"
                android:textColor="@color/Black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/history_item_category"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:paddingLeft="4dp"
                    android:layout_height="wrap_content"
                    android:text="Category : Movie"/>

                <TextView
                    android:id="@+id/history_item_result"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <TextView
                    android:id="@+id/history_item_thirdField"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Language : English"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/history_item_date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="07-07-2020 12:55 AM"/>

                <TextView
                    android:id="@+id/history_item_status_review_result"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    android:text="Review : 8.7"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>